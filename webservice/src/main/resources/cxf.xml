<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/jaxws"
    xmlns:jaxrs="http://cxf.apache.org/jaxrs"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                       http://www.springframework.org/schema/beans/spring-beans.xsd
                       http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
                       http://cxf.apache.org/jaxrs
                       http://cxf.apache.org/schemas/jaxrs.xsd">
   
    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

    <jaxws:endpoint id="employeeService" implementor="com.collegebox.webservice.service.employee.impl" address="/employeeService" />
    
    <bean id="collegeBoxApp" class="com.xwtec.controller.RestController" />
    
    <bean id="jsonProvider" class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider"/>
    
    <jaxrs:server id="collegeBoxServer" address="/rest">
    	<jaxrs:serviceBeans>
    		<ref bean="collegeBoxApp" />
    	</jaxrs:serviceBeans>
    	
    	<jaxrs:extensionMappings>
    		<entry key="json" value="application/json" />
    	</jaxrs:extensionMappings>
    	
    	<jaxrs:languageMappings>
           <entry key="en" value="en-gb"/>
    	</jaxrs:languageMappings>
    	
	    <jaxrs:providers>
	        <ref bean="jsonProvider"/>
	        <bean class="com.webservice.collegebox.exception.CollegeBoxExceptionHandler"/>
	    </jaxrs:providers>
    </jaxrs:server>
       
</beans>